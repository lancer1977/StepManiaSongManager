<UserControl x:Class="Stepmania.Manager.Dialogs.Confirmation.ConfirmDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Width="320" Height="160"
             Background="{StaticResource TronDarkBrush}">
    <Border BorderBrush="{StaticResource TronCyanDimBrush}" BorderThickness="1" Padding="16" Margin="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding Message}" Grid.Row="0" TextWrapping="Wrap"
                       Foreground="{StaticResource TronTextBrush}" FontSize="13" VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Command="{Binding CloseDialogCommand}" CommandParameter="true" Content="Yes" Width="80" Height="28"
                        HorizontalAlignment="Right" Margin="0,0,8,0" IsDefault="True"/>
                <Button Command="{Binding CloseDialogCommand}" CommandParameter="false" Content="No" Width="80" Height="28"
                        HorizontalAlignment="Right" IsCancel="True"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
