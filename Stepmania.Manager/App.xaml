<prism:PrismApplication
    x:Class="Stepmania.Manager.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Stepmania.Manager"
    xmlns:prism="http://prismlibrary.com/">
    <Application.Resources>
        <!-- Tron color palette -->
        <Color x:Key="TronDark">#0D0D12</Color>
        <Color x:Key="TronDarker">#060608</Color>
        <Color x:Key="TronCyan">#00D4FF</Color>
        <Color x:Key="TronCyanDim">#0088AA</Color>
        <Color x:Key="TronOrange">#FF6600</Color>
        <Color x:Key="TronOrangeDim">#CC5200</Color>
        <Color x:Key="TronText">#E0E8F0</Color>
        <Color x:Key="TronTextDim">#8090A0</Color>
        <Color x:Key="TronGrid">#001A22</Color>

        <SolidColorBrush x:Key="TronDarkBrush" Color="{StaticResource TronDark}"/>
        <SolidColorBrush x:Key="TronDarkerBrush" Color="{StaticResource TronDarker}"/>
        <SolidColorBrush x:Key="TronCyanBrush" Color="{StaticResource TronCyan}"/>
        <SolidColorBrush x:Key="TronCyanDimBrush" Color="{StaticResource TronCyanDim}"/>
        <SolidColorBrush x:Key="TronOrangeBrush" Color="{StaticResource TronOrange}"/>
        <SolidColorBrush x:Key="TronOrangeDimBrush" Color="{StaticResource TronOrangeDim}"/>
        <SolidColorBrush x:Key="TronTextBrush" Color="{StaticResource TronText}"/>
        <SolidColorBrush x:Key="TronTextDimBrush" Color="{StaticResource TronTextDim}"/>
        <SolidColorBrush x:Key="TronGridBrush" Color="{StaticResource TronGrid}"/>

        <!-- Grid background (subtle Tron grid lines) -->
        <DrawingBrush x:Key="TronGridBackground" TileMode="Tile" Viewport="0,0,40,40" ViewportUnits="Absolute" Viewbox="0,0,40,40" ViewboxUnits="Absolute">
            <DrawingBrush.Drawing>
                <DrawingGroup>
                    <GeometryDrawing Brush="{StaticResource TronGridBrush}">
                        <GeometryDrawing.Geometry>
                            <GeometryGroup>
                                <LineGeometry StartPoint="0,0" EndPoint="0,40"/>
                                <LineGeometry StartPoint="0,0" EndPoint="40,0"/>
                            </GeometryGroup>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>

        <!-- Base control styles -->
        <Style TargetType="Window">
            <Setter Property="Background" Value="{StaticResource TronDarkBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TronTextBrush}"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource TronCyanBrush}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="4,2"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource TronDarkerBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TronTextBrush}"/>
            <Setter Property="CaretBrush" Value="{StaticResource TronCyanBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TronCyanDimBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>
 

        <!-- Danger button (orange accent) -->
        <Style TargetType="Button" x:Key="DangerButton" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Foreground" Value="{StaticResource TronOrangeBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TronOrangeDimBrush}"/>
            
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource TronDarkerBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TronTextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TronCyanDimBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TronTextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TronCyanDimBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4"/>
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Foreground" Value="{StaticResource TronTextBrush}"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="border" Background="Transparent" Padding="{TemplateBinding Padding}" BorderThickness="0">
                            <ContentPresenter/>
                            <Border.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#001A22"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource TronCyanBrush}"/>
                                    <Setter TargetName="border" Property="BorderThickness" Value="1"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#0A1520"/>
                                </Trigger>
                            </Border.Triggers>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TronTextBrush}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <Style TargetType="Image">
            <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
        </Style>
    </Application.Resources>
</prism:PrismApplication>
